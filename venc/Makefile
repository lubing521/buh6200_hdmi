#===============================================================================
# export variables
#===============================================================================

ifneq ($(srctree),)
KERNEL_DIR := $(srctree)

SDK_DIR := $(shell cd $(KERNEL_DIR)/../../../.. && /bin/pwd)
else
SDK_DIR := $(shell cd $(CURDIR)/../../../.. && /bin/pwd)
endif

include $(SDK_DIR)/base.mak


#===============================================================================
# local variables
#===============================================================================

VENC_VERSION := venc_v2.0



obj-y += $(VENC_VERSION)/

#===============================================================================
#   rules
#===============================================================================
.PHONY: all clean

all:
	$(AT)make -C $(VENC_VERSION)/ all

clean:
	$(AT)make -C $(VENC_VERSION)/ clean

